{
  "name": "meanime",
  "description": "Aplicação web de sugestões aleatórias de animes para o público brasileiro.",
  "version": "0.1.0",
  "author": "Braian Calot <braian.s.calot@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/braiancalot/meanime.git"
  },
  "homepage": "https://meanime.teshi.com.br",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "commit": "cz",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "codegen:introspect": "graphql-codegen --config codegen-introspect.ts"
  },
  "dependencies": {
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "next": "15.5.3",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@parcel/watcher": "^2.5.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "prettier": "3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
